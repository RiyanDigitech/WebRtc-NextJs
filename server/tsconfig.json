{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "lib": [
            "es2021"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/*",
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}